@model IEnumerable<LearnDotNetCore.Models.Pie> 
<html>
<head>

</head>
<body>
    
    @foreach(var pie in Model)
    {
        <div class="col-sm-4 col-lg-4 col-md-4" style="margin-top:5px" >
            <div class="img-thumbnail text-center">
                <img src="@pie.ImageThumbnailUrl" />
                <div class="figure-caption">
                    <h3 class="text-center">@pie.Name</h3>
                    <h4>Price : @pie.Price.ToString("c")</h4>
                    <p>@pie.ShortDescription</p>
                </div>

            </div>
        </div>
    }

</body>
</html>