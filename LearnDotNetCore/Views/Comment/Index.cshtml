@model LearnDotNetCore.Models.Comments


    <form  asp-action="Index" method="post" role="form" class="form-horizontal w-100">
        <div class="form-group">
            <label for="Firstname" class="col-md-2 control-label">First Name</label>
            <div class="col-md-5">
                <input class="form-control" asp-for="Firstname" />
            </div>


        </div>
        <div class="form-group">
            <label for="Lastname" class="col-md-2 control-label"> Last Name</label>
            <div class="col-md-5">
                <input class="form-control" asp-for="Lastname" />
            </div>


        </div>
        <div class="form-group">
            <label for="Email" class="col-md-2 control-label"> Email </label>
            <div class="col-md-5">
                <input class="form-control" asp-for="Email" />
            </div>


        </div>
        <div class="form-group">
            <label for="Comment" class="col-md-2 control-label"> Comment </label>
            <div class="col-md-5">
                <textarea class="form-control" asp-for="Comment"></textarea>
            </div>


        </div>

        <div class="form-group">
            <label for="CallMe" class="col-md-2 control-label"> Send Me Email </label>
            <div class="col-md-5">
                <input type="checkbox" class="form-control" asp-for="CallMe" />
            </div>


        </div>
        <div class="form-group">
            
            <div class="col-md-5">
                <input type="submit" class="form-control" value="Save Comment" />
            </div>


        </div>

    </form>